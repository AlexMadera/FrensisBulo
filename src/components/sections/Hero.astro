---
import type { SiteContent } from '../../i18n/content';
import ThreeBackground from '../ui/ThreeBackground.astro';
import Container from '../ui/Container.astro';

interface Props {
  data: SiteContent['hero'];
}

const { data } = Astro.props;
---

<section id="home" class="hero" aria-labelledby="hero-title" itemscope itemtype="https://schema.org/WPHeader">
  <div class="hero-bg" aria-hidden="true">
    <div class="hero-image"></div>
    <ThreeBackground />
    <div class="gradient-overlay"></div>
  </div>

  <Container class="hero-container">
    <header class="hero-content" itemprop="mainContentOfPage">
      <h1 id="hero-title" class="hero-title" itemprop="headline">
        <span class="title-line">
          <span class="title-word">Massagetherapie</span>
        </span>
        <span class="title-line">
          <span class="title-word text-gradient">Frensis Bulo</span>
        </span>
      </h1>

      <p class="hero-tagline" itemprop="description">{data.tagline}</p>

      <nav class="hero-cta" aria-label="Primary actions">
        <a href="#contact" class="btn-primary" role="button" aria-describedby="cta-description">
          <span class="btn-text">Book Now</span>
          <span class="btn-icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </span>
        </a>
        <span id="cta-description" class="sr-only">Schedule your massage therapy session with Frensis Bulo</span>
      </nav>

      <aside class="hero-stats" aria-label="Professional achievements" itemscope itemtype="https://schema.org/AggregateRating">
        <div class="stat-item">
          <span class="stat-number" itemprop="ratingCount">10+</span>
          <span class="stat-label">Years Experience</span>
        </div>
        <div class="stat-divider" aria-hidden="true"></div>
        <div class="stat-item">
          <span class="stat-number">1000+</span>
          <span class="stat-label">Happy Clients</span>
        </div>
        <div class="stat-divider" aria-hidden="true"></div>
        <div class="stat-item">
          <span class="stat-number" itemprop="ratingValue">5.0</span>
          <span class="stat-label" itemprop="bestRating">Rating</span>
        </div>
      </aside>
    </header>
  </Container>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Hero entrance animation timeline
  const heroTl = gsap.timeline({
    defaults: { ease: 'power4.out' },
    delay: 0.2 // Small delay for Three.js to initialize
  });

  heroTl
    .fromTo('.title-word',
      { y: 100, opacity: 0, rotateX: -30 },
      { y: 0, opacity: 1, rotateX: 0, duration: 1, stagger: 0.15 }
    )
    .fromTo('.hero-tagline',
      { opacity: 0, y: 30 },
      { opacity: 1, y: 0, duration: 0.8 },
      '-=0.5'
    )
    .fromTo('.hero-cta a',
      { opacity: 0, y: 20, scale: 0.9 },
      { opacity: 1, y: 0, scale: 1, duration: 0.6, stagger: 0.1 },
      '-=0.4'
    )
    .fromTo('.stat-item',
      { opacity: 0, y: 20 },
      { opacity: 1, y: 0, duration: 0.5, stagger: 0.1 },
      '-=0.3'
    )
    .fromTo('.stat-divider',
      { scaleY: 0, opacity: 0 },
      { scaleY: 1, opacity: 1, duration: 0.4, stagger: 0.1 },
      '-=0.4'
    );

  // Parallax scroll effect
  gsap.to('.hero-content', {
    scrollTrigger: {
      trigger: '.hero',
      start: 'top top',
      end: 'bottom top',
      scrub: 1,
    },
    y: 100,
    opacity: 0.2,
  });

  // Background parallax with GSAP
  gsap.to('#canvas-container', {
    scrollTrigger: {
      trigger: '.hero',
      start: 'top top',
      end: 'bottom top',
      scrub: 1.5,
    },
    y: 150,
    scale: 1.1,
  });

</script>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 6rem 0 4rem;
    /* Brighter base background for professional look */
    background: linear-gradient(
      180deg,
      rgba(20, 30, 32, 1) 0%,
      rgba(14, 20, 22, 1) 50%,
      rgba(14, 14, 14, 1) 100%
    );
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-image {
    position: absolute;
    inset: 0;
    background-image: url('/hero-massage-bg.jpg');
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;
    opacity: 0.2;
    z-index: 0;
    filter: grayscale(20%) contrast(1.05);
  }

  .gradient-overlay {
    position: absolute;
    inset: 0;
    /* Brighter, more open gradient to showcase the positive background */
    background:
      /* Central opening - bright and airy */
      radial-gradient(ellipse 100% 80% at 50% 45%,
        rgba(120, 203, 205, 0.08) 0%,
        rgba(120, 203, 205, 0.03) 30%,
        transparent 60%),
      /* Soft vignette - lighter than before */
      radial-gradient(ellipse 90% 70% at 50% 50%,
        transparent 0%,
        rgba(14, 20, 22, 0.3) 50%,
        rgba(14, 14, 14, 0.7) 100%),
      /* Top highlight for brightness */
      radial-gradient(ellipse 80% 40% at 50% 0%,
        rgba(165, 225, 227, 0.1) 0%,
        transparent 60%),
      /* Bottom fade */
      linear-gradient(to top,
        rgba(14, 14, 14, 0.9) 0%,
        transparent 30%);
    pointer-events: none;
    z-index: 1;
  }

  .hero-container {
    position: relative;
    z-index: 2;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    display: flex;
    flex-direction: column;
    margin: 0;
    line-height: 1;
  }

  .title-line {
    overflow: hidden;
    display: block;
    perspective: 1000px;
        padding-bottom:10px;
  }

  .title-word {
    display: block;
    transform-origin: center center;
    /* Add text shadow for better visibility on bright background */
    text-shadow: 0 2px 30px rgba(0, 0, 0, 0.3);
  }

  .hero-tagline {
    font-size: clamp(var(--text-base), 1.5vw, var(--text-xl));
    max-width: 580px;
    color: var(--text-muted);
    line-height: var(--leading-relaxed);
    margin: 0;
    font-weight: var(--font-normal);
    letter-spacing: var(--tracking-normal);
    /* Subtle text shadow for readability */
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.2);
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: var(--primary-color);
    color: var(--black);
    border-radius: 50px;
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    /* Enhanced glow effect */
    box-shadow:
      0 4px 20px rgba(120, 203, 205, 0.3),
      0 0 40px rgba(120, 203, 205, 0.1);
  }

  .btn-primary:hover {
    background: var(--white);
    transform: translateY(-2px);
    box-shadow:
      0 10px 40px rgba(120, 203, 205, 0.4),
      0 0 60px rgba(120, 203, 205, 0.2);
  }

  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }

  .btn-icon {
    display: flex;
    transition: transform 0.3s ease;
  }


  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(120, 203, 205, 0.15);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .stat-number {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--white);
    line-height: var(--leading-none);
    letter-spacing: var(--tracking-tight);
    /* Subtle glow on numbers */
    text-shadow: 0 0 20px rgba(120, 203, 205, 0.3);
  }

  .stat-label {
    font-size: var(--text-xs);
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    font-weight: var(--font-medium);
  }

  .stat-divider {
    width: 1px;
    height: 35px;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(120, 203, 205, 0.3),
      transparent
    );
    transform-origin: center;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 6rem 0 3rem;
      min-height: auto;
    }

    .hero-content {
      padding: 2rem 1rem;
    }

    .hero-title {
      font-size: clamp(var(--text-4xl), 10vw, var(--text-5xl));
    }

    .hero-tagline {
      font-size: var(--text-base);
      max-width: 100%;
    }

    .hero-cta {
      flex-direction: column;
      width: 100%;
      max-width: 320px;
    }

    .btn-primary {
      width: 100%;
      justify-content: center;
      padding: 0.875rem 1.5rem;
      font-size: var(--text-sm);
    }

    .hero-stats {
      flex-wrap: wrap;
      gap: 1.5rem;
      width: 100%;
      max-width: 320px;
    }

    .stat-divider {
      display: none;
    }

    .stat-item {
      flex: 1;
      min-width: 80px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 5rem 0 2rem;
    }

    .hero-stats {
      gap: 1rem;
    }

    .stat-number {
      font-size: var(--text-xl);
    }

    .stat-label {
      font-size: 0.65rem;
    }
  }
</style>
