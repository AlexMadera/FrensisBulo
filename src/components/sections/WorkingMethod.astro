---
import type { SiteContent } from '../../i18n/content';
import Container from '../ui/Container.astro';
import SectionHeader from '../ui/SectionHeader.astro';

interface Props {
  data: SiteContent['workingMethod'];
}

const { data } = Astro.props;
---

<section id="workingmethod" class="working-method">
  <div class="method-bg">
    <div class="gradient-overlay"></div>
  </div>

  <Container>
    <SectionHeader title={data.title} subtitle={data.subtitle} />

    <div class="process-steps">
      <div class="process-line"></div>
      
      {data.steps.map((step, index) => (
        <div class="process-step" data-index={index}>
          <div class="step-marker">
            <span class="step-number">0{index + 1}</span>
          </div>
          <div class="step-content">
            <h3 class="step-title">{step.title}</h3>
            <p class="step-description">{step.description}</p>
          </div>
        </div>
      ))}
    </div>

  </Container>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: '.working-method',
      start: 'top 70%',
    }
  });

  tl.fromTo('.process-line', 
    { scaleX: 0 },
    { scaleX: 1, duration: 1, ease: 'power3.inOut' }
  )
  .fromTo('.step-marker',
    { scale: 0, opacity: 0 },
    { scale: 1, opacity: 1, duration: 0.5, stagger: 0.15, ease: 'back.out(1.7)' },
    '-=0.5'
  )
  .fromTo('.step-content',
    { y: 30, opacity: 0 },
    { y: 0, opacity: 1, duration: 0.6, stagger: 0.15 },
    '-=0.8'
  )
  .fromTo('.method-cta',
    { y: 20, opacity: 0 },
    { y: 0, opacity: 1, duration: 0.5 },
    '-=0.3'
  );
</script>

<style>
  .working-method {
    position: relative;
    padding: 8rem 0;
    overflow: hidden;
    background: var(--bg-color);
  }

  .method-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    background: radial-gradient(circle at 50% 50%, rgba(120, 203, 205, 0.05) 0%, transparent 60%);
  }

  .process-steps {
    position: relative;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin: 5rem 0;
    padding-top: 2rem;
  }

  .process-line {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
    transform-origin: left;
  }

  .process-step {
    position: relative;
    padding-top: 2rem;
  }

  .step-marker {
    position: absolute;
    top: -20px;
    left: 0;
    width: 40px;
    height: 40px;
    background: var(--bg-color);
    border: 1px solid var(--primary-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    box-shadow: 0 0 20px rgba(120, 203, 205, 0.2);
  }

  .step-number {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--primary-color);
  }

  .process-step::before {
    content: '';
    position: absolute;
    top: 0;
    left: 20px;
    width: 1px;
    height: 100%;
    background: linear-gradient(to bottom, var(--primary-color), transparent);
    opacity: 0.2;
  }

  .step-title {
    font-size: 1.25rem;
    color: var(--white);
    margin: 0 0 1rem;
    font-weight: 600;
  }

  .step-description {
    font-size: 0.95rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0;
  }

  .method-cta {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: var(--primary-color);
    color: var(--black);
    border-radius: 2px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background: var(--white);
    transform: translateY(-2px);
  }

  .btn-icon {
    display: flex;
    transition: transform 0.3s ease;
  }

  .btn-primary:hover .btn-icon {
    transform: translateX(4px);
  }

  @media (max-width: 900px) {
    .process-steps {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem 2rem;
    }
    
    .process-line {
      display: none; 
    }

    .process-step {
      padding-top: 0;
      padding-left: 3.5rem;
    }

    .step-marker {
      top: 0;
      left: 0;
    }

    .process-step::before {
      top: 40px;
      left: 20px;
      height: calc(100% + 3rem);
    }
    
    .process-step:nth-last-child(-n+2)::before {
      display: none;
    }
  }

  @media (max-width: 500px) {
    .process-steps {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .process-step:nth-last-child(2)::before {
      display: block;
    }

    .process-step:last-child::before {
      display: none;
    }
  }
</style>