---
interface Props {
  elevation?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
  class?: string;
}

const { 
  elevation = 'none', 
  hover = true, 
  class: className = '' 
} = Astro.props;
---

<div class:list={['card', `elevation-${elevation}`, { 'has-hover': hover }, className]}>
  <slot />
</div>

<style>
  .card {
    background: var(--card-bg);
    border-radius: 2px;
    padding: 2.5rem;
    border: 1px solid rgba(255, 255, 255, 0.03);
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at top right, rgba(120, 203, 205, 0.1), transparent 60%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .has-hover:hover::before {
    opacity: 1;
  }

  .elevation-sm {
    box-shadow: var(--shadow-sm);
  }

  .elevation-md {
    box-shadow: var(--shadow-md);
  }

  .elevation-lg {
    box-shadow: var(--shadow-lg);
  }

  .has-hover:hover {
    transform: translateY(-5px);
    border-color: rgba(120, 203, 205, 0.3);
  }
</style>
